@page
@model RazorPizzeria.Pages.Checkouts.CheckoutModel
@{
}
<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-automb-5">
        <img src=@imagePath class="w-100" asp-append-version="true"/>
        <p>Your Order For the @Model.PizzaName Pizza Is Ready!!!!</p>
        <p>Total Price for your Pizza is:@Model.PizzaPrice$</p>
        <br/>
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="Thankyou">Confirm Order!</a>    
    </div>
</div>